<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Cronómetro -->
    <TextView
        android:id="@+id/tvTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tiempo: 30"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <!-- Puntaje -->
    <TextView
        android:id="@+id/tvScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Puntos: 0"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <!-- Botón que se toca -->
    <Button
        android:id="@+id/btnTapMe"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="¡Tócame!"
        android:textColor="#FFF"
        android:background="@android:color/holo_blue_light"
        android:layout_centerInParent="true" />

<!--    <ImageButton-->
<!--        android:id="@+id/btnTapMe"-->
<!--        android:layout_width="100dp"-->
<!--        android:layout_height="100dp"-->
<!--        android:src="@drawable/sonic"-->
<!--        android:background="@null"-->
<!--        android:contentDescription="Botón de juego"-->
<!--        android:layout_centerInParent="true" />-->

    <!-- Vista Game Over -->
    <TextView
        android:id="@+id/tvGameOver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Juego Terminado!"
        android:textSize="30sp"
        android:textColor="#FF0000"
        android:visibility="gone"
        android:layout_centerInParent="true" />

    <!-- Puntaje máximo -->
    <TextView
        android:id="@+id/tvHighScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mejor: 0"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_below="@id/tvScore"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"/>


    <!-- Botón de reinicio -->
    <Button
        android:id="@+id/btnRestart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reiniciar"
        android:visibility="gone"
        android:layout_below="@id/tvGameOver"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

</RelativeLayout>
