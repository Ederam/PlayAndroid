<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:padding="16dp">

    <!-- Cronómetro -->
    <TextView
        android:id="@+id/tvTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tiempo: 30"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <!-- Puntaje -->
    <TextView
        android:id="@+id/tvScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Puntos: 0"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <!-- Monstruo (inicialmente invisible) -->
    <ImageView
        android:id="@+id/imgMonster"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/sullivan"
        android:visibility="invisible"
        android:layout_centerInParent="true" />

    <!-- Pantalla Game Over -->
    <TextView
        android:id="@+id/tvGameOver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Juego Terminado!"
        android:textSize="28sp"
        android:textColor="#FF0000"
        android:visibility="gone"
        android:layout_centerInParent="true" />

    <!-- Botón Reiniciar -->
    <Button
        android:id="@+id/btnRestart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reiniciar"
        android:visibility="gone"
        android:layout_below="@id/tvGameOver"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>
</RelativeLayout>
